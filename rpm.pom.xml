<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	       xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <packaging>rpm</packaging>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>zep_01</artifactId>
  <version>${revision}${sha1}${changelist}</version>
  <name>zep_01</name>
  <description>zep_01</description>
  <groupId>com.teragrep</groupId>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <revision>0.0.1</revision>
    <changelist>-SNAPSHOT</changelist>
    <sha1/>
  </properties>
  <build>
    <directory>${project.basedir}/target</directory>
    <plugins>
      <plugin>
	      <groupId>org.apache.maven.plugins</groupId>
	      <artifactId>maven-surefire-plugin</artifactId>
	      <configuration>
          <skipTests>true</skipTests>
	      </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>2.2.0</version>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>default-rpm</id>
            <goals>
              <goal>rpm</goal>
            </goals>
            <phase>package</phase>
          </execution>
        </executions>
        <configuration>
          <summary>${project.groupId}-${project.artifactId}</summary>
          <name>${project.groupId}-${project.artifactId}</name>
          <version>${project.version}</version>
          <release>${env.BUILD_ID}</release>
          <license>Proprietary</license>
          <distribution>teragrep Log Management Suite</distribution>
          <vendor>https://teragrep.com/</vendor>
          <packager>teragrep &lt;servicedesk@teragrep.com&gt;</packager>
          <group>teragrep/LogManagementSuite</group>
          <description>${project.groupId}-${project.artifactId}</description>
          <needarch>true</needarch>
          <defaultUsername>srv-zpln</defaultUsername>
          <defaultGroupname>srv-zpln</defaultGroupname>
          <defaultFilemode>0644</defaultFilemode>
          <defaultDirmode>0755</defaultDirmode>
          <!-- disable bytecompile as python3 scripts compiled by python2 often causes fatal errors -->
          <defineStatements>
            <!-- _python_bytecompile_extra 0 doesn't work so we take the original script and just replace what we do not want -->
            <defineStatement>__os_install_post %(echo '%{__os_install_post}' | sed -e 's!/usr/lib[^[:space:]]*/brp-python-bytecompile[[:space:]].*$!!g')</defineStatement>
            <defineStatement>_build_id_links none</defineStatement>
            <defineStatement>__provides_exclude ^osgi\\(.*$</defineStatement>
            <defineStatement>__requires_exclude ^osgi\\(.*$</defineStatement>
          </defineStatements>
          <mappings>
            <mapping>
              <directory>/usr/lib/systemd/system</directory>
              <directoryIncluded>false</directoryIncluded>
              <sources>
                <source>
                  <location>${project.basedir}/rpm/zep_01.service</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/teragrep/${project.artifactId}/bin</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>755</filemode>
              <dirmode>755</dirmode>
              <username>srv-zpln</username>
              <groupname>srv-zpln</groupname>
              <recurseDirectories>true</recurseDirectories>
              <sources>
                <source>
                  <location>${project.basedir}/zeppelin-distribution/target/zeppelin-0.10.1/zeppelin-0.10.1/bin</location>
                </source>
                <source>
                  <location>${project.basedir}/rpm/sudo-wrapper.sh</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/teragrep/${project.artifactId}</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>644</filemode>
              <dirmode>755</dirmode>
              <username>srv-zpln</username>
              <groupname>srv-zpln</groupname>
              <recurseDirectories>true</recurseDirectories>
              <sources>
                <source>
                  <location>${project.basedir}/zeppelin-distribution/target/zeppelin-0.10.1/zeppelin-0.10.1</location>
                  <excludes>
                    <!-- has explicit mappings -->
                    <exclude>**/conf/*</exclude>
                    <exclude>**/bin/*</exclude>
                    <!-- notebooks are completely ignored in rpm -->
                    <exclude>**/notebook/**</exclude>
                    <exclude>**/*.zpln</exclude>
                    <!-- needs different mapping -->
                    <exclude>**/*.jar</exclude>
                    <exclude>**/*.war</exclude>
                    <!-- disable interpreters - this copies all non-jar/war files for other interpreters -->
                    <exclude>**/interpreter/kotlin/**</exclude>
                    <exclude>**/interpreter/spark/**</exclude>
                  </excludes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/teragrep/${project.artifactId}</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>755</filemode>
              <dirmode>755</dirmode>
              <username>srv-zpln</username>
              <groupname>srv-zpln</groupname>
              <recurseDirectories>true</recurseDirectories>
              <sources>
                <source>
                  <location>${project.basedir}/zeppelin-distribution/target/zeppelin-0.10.1/zeppelin-0.10.1</location>
                  <excludes>
                    <!-- disable interpreters - this copies all jar/war files for other interpreters -->
                    <exclude>**/interpreter/kotlin/**</exclude>
                    <exclude>**/interpreter/spark/**</exclude>
                  </excludes>
                  <includes>
                    <include>**/*.jar</include>
                    <include>**/*.war</include>
                  </includes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/teragrep/${project.artifactId}/interpreter/spark</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>700</filemode>
              <dirmode>700</dirmode>
              <username>srv-zpln</username>
              <groupname>srv-zpln</groupname>
              <recurseDirectories>true</recurseDirectories>
              <sources>
                <source>
                  <location>${project.basedir}/zeppelin-distribution/target/zeppelin-0.10.1/zeppelin-0.10.1/interpreter/spark</location>
                </source>
              </sources>
            </mapping>
            <!-- Non-user readable files -->
            <mapping>
              <directory>/opt/teragrep/${project.artifactId}/conf</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>600</filemode>
              <dirmode>750</dirmode>
              <username>srv-zpln</username>
              <groupname>srv-zpln</groupname>
              <recurseDirectories>true</recurseDirectories>
              <configuration>noreplace</configuration>
              <sources>
                <source>
                  <location>${project.basedir}/zeppelin-distribution/target/zeppelin-0.10.1/zeppelin-0.10.1/conf</location>
                  <excludes>
                    <exclude>**/zeppelin-env.sh*</exclude>
                    <exclude>**/*.properties*</exclude>
                  </excludes>
                </source>
              </sources>
            </mapping>
            <!-- User readable files | BE CAREFUL WHAT YOU WHITELIST -->
            <mapping>
              <directory>/opt/teragrep/${project.artifactId}/conf</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>644</filemode>
              <dirmode>755</dirmode>
              <username>srv-zpln</username>
              <groupname>srv-zpln</groupname>
              <recurseDirectories>true</recurseDirectories>
              <configuration>noreplace</configuration>
              <sources>
                <source>
                  <location>${project.basedir}/zeppelin-distribution/target/zeppelin-0.10.1/zeppelin-0.10.1/conf</location>
                  <includes>
                    <include>**/zeppelin-env.sh*</include>
                    <include>**/*.properties*</include>
                  </includes>
                </source>
              </sources>
            </mapping>
          </mappings>
          <requires>
            <require>java-1.8.0-openjdk &gt;= 1.9.0</require>
            <require>java-1.8.0-openjdk-headless &gt;= 1.9.0</require>
            <require>java-1.8.0-openjdk-devel &gt;= 1.9.0</require>
            <require>python3</require>
            <require>git</require>
            <require>sudo</require>
            <require>pam</require>
          </requires>
          <preinstallScriptlet>
            <script>
getent group srv-zpln > /dev/null || groupadd -r srv-zpln;
getent passwd srv-zpln > /dev/null || useradd -r -g srv-zpln -d /opt/teragrep/${project.artifactId} -s /sbin/nologin -c "Service User" srv-zpln;
if [ ! -d /opt/teragrep/${project.artifactId}/logs ]; then
    mkdir -p /opt/teragrep/${project.artifactId}/logs;
    chown srv-zpln:srv-zpln /opt/teragrep/${project.artifactId}/logs;
    chmod 1777 /opt/teragrep/${project.artifactId}/logs;
fi;
exit 0;
            </script>
          </preinstallScriptlet>
          <postinstallScriptlet>
            <script>
if [ -f /opt/teragrep/pth_07/bin/inject_config.py ]; then
    python3 /opt/teragrep/pth_07/bin/inject_config.py;
fi;
exit 0;
            </script>
          </postinstallScriptlet>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
